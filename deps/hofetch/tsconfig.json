  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "lib": ["ES2020"],
    "strict": true,
    "allowImportingTsExtensions": true,
    "skipLibCheck": true,
    "allowJs": true,
